  <div class="carousel__snapper"></div>
  <a href="#spiceCarousel__slide${i === 1 ? numberOfSpiceSlides : i - 1}" class="carousel__prev">Go to previous spice</a>
  <a href="#spiceCarousel__slide${i === numberOfSpiceSlides ? 1 : i + 1}" class="carousel__next">Go to next spice</a>
`;
spiceCarouselViewport.appendChild(spiceSlideElement);

const spiceNavigationItem = document.createElement('li');
spiceNavigationItem.className = 'carousel__navigation-item';
spiceNavigationItem.innerHTML = `
  <a href="#spiceCarousel__slide${i}" class="carousel__navigation-button">Go to spice ${i}</a>
`;
spiceCarouselNavigationList.appendChild(spiceNavigationItem);
}
});
