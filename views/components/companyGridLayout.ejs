      <section class="carousel" aria-label="Spices Carousel" style="height: 100%; width: 500px;">
        <% const numberOfSpiceSlides = 8; %>
        <ol class="carousel__viewport" id="spiceCarouselViewport">
    <% for (const spice of session.state.spices) { %>
      <% for (let i = 1; i <= numberOfSpiceSlides; i++) { %>
        <li class="carousel__slide" id="spiceCarousel__slide<%= i %>" tabindex="0">
          <div class="carousel__snapper"></div>
          <a href="#spiceCarousel__slide<%= i === 1 ? numberOfSpiceSlides : i - 1 %>" class="carousel__prev">Go to previous spice</a>
          <a href="#spiceCarousel__slide<%= i === numberOfSpiceSlides ? 1 : i + 1 %>" class="carousel__next">Go to next spice</a>

    <div class="card <%= spice._id %>" style="z-index: 1;">
      <div class="cardHead">
        <div class="profileHeader" style="background-image: url('/public/backer.jpeg'); background-size: cover; background-repeat: no-repeat; background-position: center center; height: 80px;width: 80px; border-radius: 360px;">
        </div>
      </div>

      <div class="main">
        <div class="cardBody">
          <div class="contents">Name: <%= spice.name %></div>
          <div class="contents">Managed By: <%= spice.companyName %></div>
          <div class="contents">Weight: <%= spice.weight %> grams</div>
          <div class="contents">Seller ID: <%= spice.sellerId %></div>
          <div class="contents">Auction Date: <%= formatDate(spice.auctionDate) %></div>
          <div class="contents">End Time: <%= formatDate(spice.endTime) %></div>
          <div class="contents">Minimum Price: <%= spice.minimumPrice %></div>
          <div class="contents">Seller Id: <%= spice.sellerId %></div>
          <div class="contents">Holder Name: <%= spice.holderFirstName %> <%= spice.holderLastName %></div>
          <div class="contents">Is Approved: <%= !spice.isRejected ? '✅' : '❌' %></div>
        </div>
        <div class="footer">
                              <button class="Edit" id='<%= `button_${spice._id}_${i}` %>'>✍️ <%= !spice.isRejected ? 'reject' : 'Approve' %> </button>

        </div>
      </div>
    </div>
    <script>
      document.getElementById('<%= `button_${spice._id}_${i}` %>').addEventListener('click', () => {
                    const request = new XMLHttpRequest();
          
          request.open('POST', '/company/spice/approve', true);
          request.setRequestHeader('Content-Type', 'application/json');
          request.send(JSON.stringify({ id: '<%= spice._id %>' }));

          request.onreadystatechange = async function() {
              if (request.readyState === 4 && request.status === 200) {
                    location.reload();
        
              }
          };
      });
  </script>
